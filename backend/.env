# 数据库配置
DATABASE_URL="file:./dev.db"

# Redis配置
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-for-idle-resource-platform"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-for-idle-resource-platform"
JWT_REFRESH_EXPIRES_IN="30d"

# 服务器配置
PORT=3002
NODE_ENV="development"

# 微信OAuth配置
WECHAT_OAUTH_APP_ID="your-wechat-oauth-app-id"
WECHAT_OAUTH_APP_SECRET="your-wechat-oauth-app-secret"
WECHAT_OAUTH_REDIRECT_URI="http://localhost:3001/api/auth/wechat/callback"

# GitHub OAuth配置
GITHUB_OAUTH_CLIENT_ID="your-github-oauth-client-id"
GITHUB_OAUTH_CLIENT_SECRET="your-github-oauth-client-secret"
GITHUB_OAUTH_REDIRECT_URI="http://localhost:3000/auth/github/callback"

# 阿里云配置
ALIBABA_CLOUD_ACCESS_KEY_ID="your-access-key-id"
ALIBABA_CLOUD_ACCESS_KEY_SECRET="your-access-key-secret"
ALIBABA_CLOUD_REGION="cn-hangzhou"
ALIBABA_CLOUD_OSS_BUCKET="your-bucket-name"
ALIBABA_CLOUD_OSS_ENDPOINT="your-oss-endpoint"

# 支付配置
ALIPAY_APP_ID="your-alipay-app-id"
ALIPAY_PRIVATE_KEY="your-alipay-private-key"
ALIPAY_PUBLIC_KEY="your-alipay-public-key"

WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"
WECHAT_MCH_ID="your-wechat-mch-id"
WECHAT_MCH_KEY="your-wechat-mch-key"

# 短信服务
SMS_ACCESS_KEY_ID="your-sms-access-key-id"
SMS_ACCESS_KEY_SECRET="your-sms-access-key-secret"
SMS_SIGN_NAME="your-sms-sign-name"
SMS_TEMPLATE_CODE="your-sms-template-code"

# 地图服务
GAODE_MAP_API_KEY="your-gaode-map-api-key"

# 文件上传
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@yourapp.com"

# 日志配置
LOG_LEVEL="info"
LOG_FILE_PATH="logs/app.log"