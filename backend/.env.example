# 服务器配置
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# 数据库配置
DATABASE_URL="file:./dev.db"
# 如果使用 PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/trade_db"
# 如果使用 MySQL:
# DATABASE_URL="mysql://username:password@localhost:3306/trade_db"

# Redis 配置（可选，不配置将使用内存缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# 文件上传配置
# AWS S3 配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket-name

# 本地文件上传路径
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# 邮件服务配置 (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 短信服务配置 (阿里云/腾讯云)
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_REGION=cn-hangzhou
SMS_SIGN_NAME=your-sms-sign

# 微信支付配置
WECHAT_PAY_APP_ID=your-wechat-app-id
WECHAT_PAY_MCH_ID=your-merchant-id
WECHAT_PAY_KEY=your-wechat-pay-key
WECHAT_PAY_CERT_PATH=./certs/wechat/cert.pem
WECHAT_PAY_KEY_PATH=./certs/wechat/key.pem

# 支付宝配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_SANDBOX=true

# 微信 OAuth 配置
WECHAT_APP_ID=your-wechat-oauth-app-id
WECHAT_APP_SECRET=your-wechat-oauth-app-secret
WECHAT_REDIRECT_URI=http://localhost:3001/api/auth/wechat/callback

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3001/api/auth/github/callback

# 地理位置服务配置
# 百度地图 API
BAIDU_MAP_AK=your-baidu-map-api-key

# 高德地图 API
AMAP_KEY=your-amap-api-key

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# 健康检查配置
HEALTH_PATH=/health

# 安全配置
ENCRYPTION_KEY=your-32-character-encryption-key
COOKIE_SECRET=your-cookie-secret-key

# 第三方服务配置
# 阿里云OSS
ALIYUN_OSS_ACCESS_KEY=your-oss-access-key
ALIYUN_OSS_SECRET_KEY=your-oss-secret-key
ALIYUN_OSS_BUCKET=your-oss-bucket
ALIYUN_OSS_REGION=oss-cn-beijing

# 推送通知配置 (Firebase/极光推送)
FIREBASE_SERVER_KEY=your-firebase-server-key
JPUSH_APP_KEY=your-jpush-app-key
JPUSH_MASTER_SECRET=your-jpush-master-secret

