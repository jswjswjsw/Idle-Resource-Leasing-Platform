# 测试环境配置
NODE_ENV=test
PORT=3002

# 测试数据库（使用内存数据库或独立的测试数据库）
DATABASE_URL=\"file:./test.db\"

# JWT 配置（测试用密钥）
JWT_SECRET=test-secret-key-for-unit-testing-only
JWT_EXPIRES_IN=1h

# Redis 配置（测试时禁用）
# REDIS_URL=

# 邮件服务（测试时禁用）
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# 短信服务（测试时禁用）
# SMS_ACCESS_KEY=
# SMS_SECRET_KEY=

# 支付服务（测试时使用沙箱）
ALIPAY_SANDBOX=true
WECHAT_PAY_SANDBOX=true

# OAuth 配置（测试用）
WECHAT_APP_ID=test-wechat-app-id
WECHAT_APP_SECRET=test-wechat-app-secret
GITHUB_CLIENT_ID=test-github-client-id
GITHUB_CLIENT_SECRET=test-github-client-secret

# 文件上传（测试时使用本地存储）
UPLOAD_DIR=./test-uploads
MAX_FILE_SIZE=1048576

# 日志配置
LOG_LEVEL=error
ENABLE_FILE_LOGGING=false

# 限流配置（测试时放宽限制）
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# 健康检查
HEALTH_PATH=/test-health

# 前端URL（测试环境）
FRONTEND_URL=http://localhost:3000