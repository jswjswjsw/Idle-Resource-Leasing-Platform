# ==============================================
# wwwcn.uk 域名环境变量配置
# ==============================================

# ----- 基础配置 -----
NODE_ENV=production
API_VERSION=1.0.0
PORT=5000

# 🌐 wwwcn.uk 域名配置
FRONTEND_URL=https://wwwcn.uk
BACKEND_URL=https://api.wwwcn.uk

# ----- 数据库配置 -----
# 生产环境数据库连接
DATABASE_URL=postgresql://username:password@your-db-host:5432/trade_platform

# ----- Redis 缓存配置 -----
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ----- JWT 认证配置 -----
# 生产环境强密码
JWT_SECRET=your-super-secure-jwt-secret-for-wwwcn-uk-production-32chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-wwwcn-uk-production-32chars
JWT_REFRESH_EXPIRES_IN=30d

# ----- 🔑 高优先级服务配置 -----

# GitHub OAuth - wwwcn.uk 域名
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://api.wwwcn.uk/api/auth/oauth/github/callback

# 高德地图API
AMAP_API_KEY=your-amap-api-key

# 支付宝沙箱
ALIPAY_SANDBOX_APP_ID=your-alipay-sandbox-app-id
ALIPAY_SANDBOX_PRIVATE_KEY=your-alipay-sandbox-private-key
ALIPAY_SANDBOX_PUBLIC_KEY=your-alipay-sandbox-public-key

# ----- 🔄 中优先级服务配置 -----

# 阿里云短信服务
ALIYUN_SMS_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_SMS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_SMS_SIGN_NAME=交易平台

# Google OAuth - wwwcn.uk 域名
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.wwwcn.uk/api/auth/oauth/google/callback

# ----- 📋 低优先级服务配置 -----

# 百度地图API
BAIDU_MAP_API_KEY=your-baidu-map-api-key

# Gitee OAuth - wwwcn.uk 域名
GITEE_CLIENT_ID=your-gitee-client-id
GITEE_CLIENT_SECRET=your-gitee-client-secret
GITEE_REDIRECT_URI=https://api.wwwcn.uk/api/auth/oauth/gitee/callback

# 微信支付沙箱
WECHAT_SANDBOX_APP_ID=your-wechat-sandbox-app-id
WECHAT_SANDBOX_MCH_ID=your-wechat-sandbox-mch-id
WECHAT_SANDBOX_API_KEY=your-wechat-sandbox-api-key

# ----- 邮件服务配置 -----
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM_NAME=交易平台
EMAIL_FROM_ADDRESS=noreply@wwwcn.uk

# ----- 文件存储配置 -----
# 本地存储
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Cloudflare R2 存储（可选）
# R2_ACCOUNT_ID=your-cloudflare-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# R2_BUCKET_NAME=wwwcn-uk-files

# ----- 安全配置 -----
BCRYPT_ROUNDS=12
SESSION_SECRET=your-production-session-secret-for-wwwcn-uk-32chars
CORS_ORIGIN=https://wwwcn.uk

# ----- 日志配置 -----
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30

# ----- 性能配置 -----
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_API_DOCS=false
DEBUG_MODE=false

# ----- Cloudflare 配置 -----
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ----- WebSocket 配置 -----
SOCKET_IO_CORS_ORIGIN=https://wwwcn.uk

# ----- 限流配置 -----
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_STRICT_MAX_REQUESTS=5

# ==============================================
# 🇨🇳 中国访问说明：
# 
# ✅ wwwcn.uk 域名优势：
# - .uk 域名在中国无需备案
# - Cloudflare 在中国有CDN节点
# - 通过香港/新加坡节点访问
# - 延迟通常在 100-200ms
# - 访问稳定性良好
# 
# 🌐 访问路径：
# 中国用户 → Cloudflare香港节点 → 您的服务器
# 
# ==============================================