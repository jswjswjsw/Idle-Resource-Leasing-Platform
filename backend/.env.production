# ==============================================
# 生产环境配置文件
# ==============================================

# ----- 基础配置 -----
NODE_ENV=production
API_VERSION=1.0.0
PORT=5000

# 生产环境域名（请替换为您的实际域名）
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# ----- 数据库配置 -----
# 生产环境数据库连接（Railway/PlanetScale提供）
DATABASE_URL=postgresql://username:password@host:port/database

# ----- Redis 缓存配置 -----
# Railway Redis或使用免费Redis服务
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ----- JWT 认证配置 -----
# 生产环境必须使用强密码
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-chars-production
JWT_REFRESH_EXPIRES_IN=30d

# ----- 邮件服务配置 -----
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM_NAME=交易平台
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# ----- 短信服务配置 -----
ALIYUN_SMS_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_SMS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_SMS_SIGN_NAME=交易平台

# ----- 地图服务配置 -----
AMAP_API_KEY=your-amap-api-key
BAIDU_MAP_API_KEY=your-baidu-map-api-key

# ----- OAuth 配置 -----
# 生产环境回调地址
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://api.your-domain.com/api/auth/oauth/github/callback

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.your-domain.com/api/auth/oauth/google/callback

GITEE_CLIENT_ID=your-gitee-client-id
GITEE_CLIENT_SECRET=your-gitee-client-secret
GITEE_REDIRECT_URI=https://api.your-domain.com/api/auth/oauth/gitee/callback

# ----- 支付服务配置 -----
# 生产环境使用正式API（需要企业资质）
# 个人项目建议继续使用沙箱环境
ALIPAY_SANDBOX_APP_ID=your-alipay-app-id
ALIPAY_SANDBOX_PRIVATE_KEY=your-alipay-private-key
ALIPAY_SANDBOX_PUBLIC_KEY=your-alipay-public-key

WECHAT_SANDBOX_APP_ID=your-wechat-app-id
WECHAT_SANDBOX_MCH_ID=your-wechat-mch-id
WECHAT_SANDBOX_API_KEY=your-wechat-api-key

# ----- 文件存储配置 -----
# 生产环境推荐使用对象存储
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10485760

# ----- 安全配置 -----
BCRYPT_ROUNDS=12
SESSION_SECRET=your-production-session-secret-min-32-chars
CORS_ORIGIN=https://your-domain.com

# ----- 日志配置 -----
LOG_LEVEL=warn
LOG_FILE_PATH=/tmp/logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30

# ----- 性能配置 -----
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_API_DOCS=false
DEBUG_MODE=false