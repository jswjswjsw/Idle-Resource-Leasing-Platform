# =============================================================================
# 环境变量配置模板
# 复制此文件为 .env 并填入实际值
# =============================================================================

# -----------------------------------------------------------------------------
# Cloudflare 配置
# -----------------------------------------------------------------------------
# Cloudflare API Token (需要Zone:Edit权限)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare Zone ID (wwwcn.uk域名的Zone ID)
CLOUDFLARE_ZONE_ID=8ad887047518bc2772572ade96309c55

# -----------------------------------------------------------------------------
# 阿里云配置
# -----------------------------------------------------------------------------
# 阿里云访问密钥ID
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id

# 阿里云访问密钥Secret
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret

# 阿里云短信服务密钥
ALIYUN_SMS_ACCESS_KEY_ID=your_aliyun_sms_access_key_id
ALIYUN_SMS_ACCESS_KEY_SECRET=your_aliyun_sms_access_key_secret

# 阿里云区域
ALIYUN_REGION=cn-hangzhou

# 阿里云可用区
ALIYUN_ZONE_ID=cn-hangzhou-b

# -----------------------------------------------------------------------------
# 数据库配置
# -----------------------------------------------------------------------------
# 数据库连接字符串
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis连接字符串
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# 应用配置
# -----------------------------------------------------------------------------
# JWT密钥 (请生成一个强随机字符串)
JWT_SECRET=your_very_secure_jwt_secret_key_here

# 应用环境
NODE_ENV=production

# 应用端口
PORT=3000

# API基础URL
API_BASE_URL=https://api.wwwcn.uk

# 前端URL
FRONTEND_URL=https://wwwcn.uk

# -----------------------------------------------------------------------------
# 第三方服务配置
# -----------------------------------------------------------------------------
# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# -----------------------------------------------------------------------------
# 对象存储配置 (Cloudflare R2)
# -----------------------------------------------------------------------------
# R2访问密钥
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key

# R2存储桶配置
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_custom_domain.com

# -----------------------------------------------------------------------------
# 安全配置
# -----------------------------------------------------------------------------
# 会话密钥
SESSION_SECRET=your_session_secret_key

# CORS允许的域名
CORS_ORIGIN=https://wwwcn.uk,https://api.wwwcn.uk

# -----------------------------------------------------------------------------
# 监控和日志
# -----------------------------------------------------------------------------
# 日志级别
LOG_LEVEL=info

# 错误报告服务
SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# 开发环境配置
# -----------------------------------------------------------------------------
# 开发模式下的数据库URL
DEV_DATABASE_URL=postgresql://dev_user:dev_pass@localhost:5432/dev_db

# 测试数据库URL
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# -----------------------------------------------------------------------------
# 注意事项
# -----------------------------------------------------------------------------
# 1. 请勿将此文件中的实际密钥提交到版本控制系统
# 2. 生产环境中请使用强随机密钥
# 3. 定期轮换敏感密钥
# 4. 确保环境变量在部署时正确设置
# 5. 使用密钥管理服务存储敏感信息（如AWS Secrets Manager、Azure Key Vault等）